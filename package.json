{
  "name": "newww",
  "version": "2.1.0",
  "description": "The npmjs.com website",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "lab --verbose --colors --ignore '$$bole,__grim__' --assert code --timeout 5000",
    "coverage": "npm test -- --reporter html > test/coverage.html && open test/coverage.html",
    "dev-db": "node dev/go.js",
    "repl": "rc /tmp/repl/www-15443.sock",
    "watch": "npm-run-all --parallel watch:*",
    "prepublish": "npm-run-all build:*",
    "dev": "npm run prepublish && npm-run-all --parallel watch:* nodemon",
    "build:static": "cpx \"./assets/{fonts,images,misc}/**/*\" static",
    "watch:static": "npm run build:static -- -w",
    "build:css": "stylus ./assets/styles/index.styl -u nib -o static/css",
    "watch:css": "npm run build:css -- -w",
    "build:js": "browserify ./assets/scripts/index.js | uglifyjs > static/js/index.min.js",
    "watch:js": "watchify ./assets/scripts/index.js -o static/js/index.min.js",
    "watch:vendor": "catw \"./assets/scripts/vendor/*.js\" -o static/js/vendor.min.js",
    "build:vendor": "catw \"./assets/scripts/vendor/*.js\" -o static/js/vendor.min.js --watch false",
    "postbuild:vendor": "uglifyjs static/js/vendor.min.js -c > static/js/vendor.min.js",
    "nodemon": "nodemon | bistre",
    "lint": "jshint {assets/scripts,adapters,facets,lib,locales,presenters,services,test}"
  },
  "author": "npm, Inc. <support@npmjs.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/npm/newww"
  },
  "browserify": {
    "transform": [
      "hbsfy"
    ]
  },
  "dependencies": {
    "accept-language-parser": "^1.0.2",
    "async": "^0.9.0",
    "blankie": "^1.1.0",
    "bluebird": "^2.6.4",
    "bole": "~1.0.0",
    "boom": "^2.6.1",
    "catbox-redis": "^1.0.4",
    "cheerio": "^0.17.0",
    "chunk": "0.0.2",
    "crumb": "^4.0.0",
    "elasticsearch": "^2.2.0",
    "github-url-to-object": "^1.5.0",
    "gravatar": "^1.1.0",
    "handlebars": "^2.0.0-alpha.2",
    "handlebars-helper-pluralize": "^1.0.2",
    "hapi": "^8.4.0",
    "hapi-auth-cookie": "^2.0.0",
    "hapi-common-log": "^1.1.0",
    "hashchange": "^1.0.0",
    "hbsfy": "^2.2.0",
    "hoek": "^2.11.0",
    "is-url": "^1.1.0",
    "joi": "^5.1.0",
    "jquery": "^2.1.1",
    "leven": "^1.0.1",
    "mailchimp-api": "^2.0.7",
    "malarkey": "^1.1.0",
    "marky-markdown": "^5.0.2",
    "moment": "^2.9.0",
    "moment-tokens": "^1.0.0",
    "month": "^1.0.0",
    "mousetrap": "0.0.1",
    "murmurhash": "0.0.2",
    "mustache-mailer": "^2.1.2",
    "nib": "^1.0.2",
    "node-uuid": "^1.4.1",
    "nodemailer-ses-transport": "^1.1.0",
    "normalize-license-data": "^1.0.1",
    "npm-email-templates": "^1.4.1",
    "npm-expansions": "^2.0.2",
    "npm-explicit-installs": "git://github.com/npm/npm-explicit-installs",
    "npm-humans": "^2.0.1",
    "npm-package-arg": "^3.1.1",
    "npm-user-validate": "^0.1.0",
    "npm2es": "git://github.com/npm/npm2es",
    "numbat-collector": "~1.0.1",
    "numbat-emitter": "~1.1.0",
    "number-grouper": "0.0.1",
    "parse-link-header": "^0.2.0",
    "prettydate": "0.0.1",
    "redis": "^0.12.1",
    "redis-url": "^1.1.0",
    "relative-date": "^1.1.2",
    "repl-client": "~0.3.0",
    "replify": "~1.2.0",
    "request": "^2.51.0",
    "require-tree": "^1.0.1",
    "schemeless": "^1.0.0",
    "scooter": "^2.0.1",
    "steeltoe": "^1.0.1",
    "stripe": "^2.7.3",
    "stylus": "^0.45.0",
    "tipsy-browserify": "^1.0.0",
    "token-facilitator": "^2.1.1",
    "truncate": "^1.0.4",
    "validate-npm-package-name": "^2.0.1"
  },
  "devDependencies": {
    "bistre": "^1.0.0",
    "browserify": "^5.8.0",
    "catw": "^1.0.0",
    "code": "^1.2.1",
    "cpx": "^1.1.5",
    "dotenv": "^0.4.0",
    "favicons": "^3.0.2",
    "grunt": "^0.4.5",
    "gulp": "^3.8.10",
    "gulp-concat": "^2.2.0",
    "gulp-jshint": "^1.9.0",
    "gulp-nodemon": "^1.0.2",
    "gulp-rename": "^1.2.0",
    "gulp-streamify": "0.0.5",
    "gulp-stylus": "^1.0.0",
    "gulp-uglify": "^0.3.0",
    "imagemin-pngcrush": "^1.0.0",
    "lab": "^5.1.1",
    "lodash": "^2.4.1",
    "nock": "^1.2.0",
    "nodemailer-mock-transport": "^1.1.0",
    "npm-run-all": "^1.2.2",
    "once": "^1.3.0",
    "replicate": "^0.2.0",
    "sinon": "^1.10.3",
    "touch": "0.0.3",
    "uglify-js": "^2.4.6",
    "vinyl-source-stream": "^0.1.1"
  }
}
